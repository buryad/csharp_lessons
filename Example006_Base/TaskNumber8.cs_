// Задача 8
Console.Write("Введите число > 0:");
int number = Convert.ToInt32(Console.ReadLine());
int i = 1;
string result = "";
while (i <= number)
{
    if (i % 2 == 0)
    {
        result = result + Convert.ToString(i + ", ");
    }
    i++;
}
result = result.TrimEnd(' ');
result = result.TrimEnd(',');
Console.WriteLine(result);
